# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=4000

# Database Configuration (Use production database URL)
DATABASE_URL=postgresql://username:password@production-host:port/database_name

# JWT Secret (MUST be different from development - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=production-secret-key-here

# Cloudinary Configuration (Production credentials)
CLOUDINARY_CLOUD_NAME=production-cloud-name
CLOUDINARY_API_KEY=production-api-key
CLOUDINARY_API_SECRET=production-api-secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Email Configuration (Production email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=production-email@example.com
EMAIL_PASSWORD=production-app-password

# Frontend URL (Production domain - for CORS)
FRONTEND_URL=https://your-app.vercel.app

# Logging
LOG_LEVEL=info

# Monitoring (Optional - Sentry DSN)
# SENTRY_DSN=your-sentry-dsn-here
